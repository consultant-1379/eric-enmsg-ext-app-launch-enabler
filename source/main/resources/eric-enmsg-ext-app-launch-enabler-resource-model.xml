    <scaleUnit>
        <minimumUnit>
            <profile>
                <cpuCores>1</cpuCores>
                <cpuMinutes>0</cpuMinutes>
                <peakCpuMinutes>0</peakCpuMinutes>
                <memory>2048</memory>
