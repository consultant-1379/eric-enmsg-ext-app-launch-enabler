                <memory>IF(OR(enm_deployment_type="Small_CloudNative_ENM",enm_deployment_type="Extra_Large_CloudNative_ENM"),2048,0)</memory>
            </profileConversionFormulae>
        </minimumUnit>
        <optimalUnit>
            <profile>
                <cpuCores>1</cpuCores>
                <cpuMinutes>0</cpuMinutes>
                <peakCpuMinutes>0</peakCpuMinutes>
                <memory>2048</memory>
            </profile>
            <profileConversionFormulae>
                <cpuCores>0</cpuCores>
                <cpuMinutes>0</cpuMinutes>
                <peakCpuMinutes>0</peakCpuMinutes>
                <memory>IF(OR(enm_deployment_type="Small_CloudNative_ENM",enm_deployment_type="Extra_Large_CloudNative_ENM"),2048,0)</memory>
            </profileConversionFormulae>
        </optimalUnit>
